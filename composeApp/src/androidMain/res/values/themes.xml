<resources>

    <style name="Theme.TVsleep" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/brand</item>
        <item name="android:colorBackground">@color/brand</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation
        duration. -->
        <item name="windowSplashScreenBackground">@color/brand</item>

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>

        <!-- Set the theme of the Activity that directly follows your splash
        screen. This is required. -->
        <item name="postSplashScreenTheme">@style/Theme.TVsleep</item>
    </style>


</resources>